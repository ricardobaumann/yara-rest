generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Warehouse {
  id           String        @id
  code         String        @unique
  transactions Transaction[]
}

model Transaction {
  id           String    @id
  batch_id     String
  warehouse_id String
  product_id   String
  hazardous    Boolean
  amount       Decimal   @default(0)
  warehouse    Warehouse @relation(fields: [warehouse_id], references: [id])

  @@index([warehouse_id])
  @@index([hazardous])
}
